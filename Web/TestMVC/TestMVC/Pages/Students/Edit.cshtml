@page 
@model TestMVC.Pages.Students.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post">
    <input type="hidden" asp-for="Student.Id" />

    <div class="form-group">
        <label asp-for="Student.Name"></label>
        <input asp-for="Student.Name"/>
    </div>

    <div class="form-group">
        <label asp-for="Student.Phone"></label>
        <input asp-for="Student.Phone" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./List">Back List</a>

</form>
