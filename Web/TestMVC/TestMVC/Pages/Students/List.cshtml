@page
@model TestMVC.Pages.Students.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<form method="get">
    <div>
        <input type="search" asp-for="SearchKeyWord" />
        <span>
            <button><i class="fa fa-search" style="font-size: 20px"></i></button>
        </span>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    @foreach (var student in Model.Students)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Phone</td>
            <td>
                <a class="btn btn-primary" asp-page="./Detail" asp-route-studentId="@student.Id">Detail</a>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-studentId="@student.Id">Edit</a>
                <a class="btn btn-primary" asp-page="./Delete" asp-route-studentId="@student.Id">Delete</a>
            </td>
        </tr>
    }
</table>

<a asp-page="./Create">Create New</a>