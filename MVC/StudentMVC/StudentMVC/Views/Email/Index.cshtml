
@{
    ViewData["Title"] = "Index";
}

<h1>Click Contact Me</h1>


@if (ViewBag.Error != null)
{
    <h2>@ViewBag.Error</h2>
}

<div class="container">
    <form method="post">
        <span class="form-control-static">Receiver Email: </span>
        <input class="form-control" type="text" placeholder="Enter receiver email" name="receiverEmail" />
        <span class="form-control-static">Subject</span>
        <input class="form-control" type="text" placeholder="Enter subject" name="subject" />
        <span class="form-control-static">Message</span>
        <input class="form-control" type="text" placeholder="Enter message" name="message" />
        <br />
        <br />

        <button class="btn btn-primary" type="submit">Send Email</button>
    </form>
</div>


