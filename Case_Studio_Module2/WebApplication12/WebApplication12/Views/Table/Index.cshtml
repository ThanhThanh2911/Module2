@model TableViewModel
@{
    ViewData["Title"] = "Index";
}

<style>
    .thumbnail h5 {
        left: 100px;
        margin-left: 9%;
    }
</style>

<h1>List Table</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model.Tables)
        {
            <div class="col-sm-3 col-lg-3 col-md-3">
                <div class="thumbnail">
                    <div class="caption">
                        <h5>@item.TableName</h5>
                    </div>
                    <div>
                        <a asp-controller="Product" asp-action="Index" asp-route-id="@item.TableId">
                            <img src="~/images/@item.ImgTable" alt="Table" />
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

