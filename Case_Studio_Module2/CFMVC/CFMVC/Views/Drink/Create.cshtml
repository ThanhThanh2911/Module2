@model ProductCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Tạo mới đồ uống</h1>
<div class="row">
    <form enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Image" class="control-label"></label>
            <div>
                <div class="custom-file">
                    <input asp-for="Image" class="form-control custom-file-input" />
                    <label class="custom-file-label"></label>
                </div>
            </div>            
        </div>
        <div class="form-group">
            <label asp-for="DrinkTypeId" class="control-label"></label>
            <select asp-for="DrinkTypeId" class="form-control" asp-items="ViewBag.Name">
            </select>
        </div>
        <button class="btn btn-danger" type="submit">Lưu</button>

        @section Scripts{ 
            <script>
                document.ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $this.val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    
                });
            </script>
        }
    </form>
</div>

<div>
    <a asp-action="Index">Trở lại danh sách</a>
</div>


