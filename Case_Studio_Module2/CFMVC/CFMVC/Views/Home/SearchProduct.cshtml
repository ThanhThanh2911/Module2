@model IEnumerable<Drink>
@{
    ViewData["Title"] = "SearchProduct";
}

<style>
    img{
        width:120px;
        height: 140px;
    }
</style>

<h1>Product</h1>
@if (Model == null)
{
    <h5>@ViewBag.Product</h5>
}

<form method="get">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-3 col-lg-3 col-md-3">
                    <div class="product">
                        <div class="caption">
                            <h5>@item.Name</h5>
                            <h6>@string.Format("{0:0,0}", item.Price)</h6>
                        </div>
                        <div>
                            <img src="~/images/@item.ImgDrink" alt="Table" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</form>

